<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Toko2025.Connection" NavigationPage.HasNavigationBar="False"
            >
    <Grid RowDefinitions="*,Auto" Padding="20">
        
        <Grid RowDefinitions="Auto,Auto" Grid.Row="0" VerticalOptions="Center">
            <StackLayout Grid.Row="0" TranslationY="-20" >
                <!--jika tidak ada koneksi internet disconnected.png-->
                <Image Source="connected.png" HeightRequest="100" 
                        />
            </StackLayout>

            <StackLayout Grid.Row="1">
                <Label Text="Koneksi Anda Bermasalah" FontSize="Title" 
                       TextColor="#333333"
                       FontFamily="FontBold" HorizontalTextAlignment="Center"></Label>
                <Label Text="Silahkan ganti ke jaringan lokal" 
                    FontFamily="FontRegular" HorizontalTextAlignment="Center"></Label>

                <StackLayout Margin="0,35">
                    <Label Text="Konfigurasi" FontFamily="FontBold"></Label>
                    <Border Padding="20" Stroke="LightGray" BackgroundColor="#f9f9f9" Margin="0,15" StrokeThickness="0.4">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <StackLayout>
                            <StackLayout>
                                <Label Text="IP Local Network"></Label>
                                <Entry Placeholder="Ex: 192.168.1.2:3000" x:Name="Entry_IPLocal" FontFamily="FontBold" HorizontalTextAlignment="End"></Entry>
                                <BoxView HeightRequest="0.1" BackgroundColor="Gray" Opacity="0.4"></BoxView>
                            </StackLayout>

                            <StackLayout Margin="0,10,0,0">
                                <Label Text="Domain Online Network"></Label>
                                <Entry Placeholder="Ex: domain.com" FontFamily="FontBold" x:Name="Entry_IPOnline" HorizontalTextAlignment="End"></Entry>
                            </StackLayout>
                        </StackLayout>
                    </Border>
                </StackLayout>
                
            </StackLayout>
        </Grid>
        <StackLayout Grid.Row="1">
            <Border Padding="10,5" Stroke="LightGray" Margin="0,15" StrokeThickness="0.4">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>
                <StackLayout Orientation="Horizontal">

                    <Picker Title="Pilih Jaringan"
                            TitleColor="Gray" FontFamily="FontRegular" TextColor="#333333">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Local Network</x:String>
                                <x:String>Online Network</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>

                    <Image Source="forward.png" HeightRequest="26" Opacity="0.5" 
                        Rotation="90" TranslationX="-2" HorizontalOptions="EndAndExpand">
                    </Image>

                </StackLayout>
            </Border>
            <Button Text="Apply Connection" FontFamily="FontBold" x:Name="B_Apply" Clicked="B_Apply_Clicked"></Button>
        </StackLayout>
        
    </Grid>
</ContentPage>